<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthDrinkBas.Views.EditPersonInGame">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Label x:Name="IdLabel"/>
            <Entry x:Name="UserNameBodyEntry"
                   TextColor="White"/>
            <StackLayout Orientation="Horizontal">
                <Button x:Name="UpdateUserButton" 
                        Text="Update" 
                        TextColor="White" 
                        Margin="0,20,0,0" 
                        BackgroundColor="#2196F3"
                        BorderColor="Black"
                        BorderWidth="3"
                        CornerRadius="50"
                        Clicked="UpdateUserButton_Clicked"/>
                <Button x:Name="DeleteUserButton" 
                        Text="Delete" 
                        TextColor="White" 
                        Margin="0,20,0,0" 
                        BackgroundColor="#2196F3"
                        BorderColor="Black"
                        BorderWidth="3"
                        CornerRadius="50"
                        Clicked="DeleteUserButton_Clicked"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>