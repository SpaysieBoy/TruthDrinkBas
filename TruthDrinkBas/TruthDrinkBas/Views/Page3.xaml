<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthDrinkBas.Views.Page3">

    <StackLayout>
        <StackLayout Margin="20">
            <Label Text="Geef hier je nieuwe vraag weer"/>
            <Entry x:Name="QuestionEntry" Placeholder="Max 200 tekens!"/>
            <Button x:Name="SaveButton" Text="Save Question" Clicked="SaveButton_Clicked"/>
        </StackLayout>
        <ListView x:Name="QuestionListView" ItemSelected="QuestionListView_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding QuestionBody}" TextColor="Black"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>